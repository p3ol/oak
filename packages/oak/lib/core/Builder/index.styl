@require "../../theme/colors"

.oak-builder
  .oak-add-element
    text-align: center

  .oak-undo-redo
    width:100%
    display: flex
    padding-bottom: 10px

    .oak-undo, .oak-redo
      color: var(--oak-text-color)
      cursor: pointer
      align-items: center
      padding: 10px 15px 6px
      background: $color-black-squeeze
      border-radius: 3px
      user-select: none

      &.disabled
        opacity: 0.5
        cursor: default

      &:hover
        &:not(.disabled)
          box-shadow: 0 0 0 1px var(--oak-main-color)

    .oak-undo
      margin-right: 10px
