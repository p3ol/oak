@require "../../theme/colors"

.oak-catalogue
  &.oak-opened
    .oak-handle
      transform: rotate(45deg)
      background: $color-catskill-white

  .oak-handle
    display: inline-block
    width: 40px
    height: 40px
    background: $color-link-water
    border-radius: 50%
    position: relative
    cursor: pointer
    transition: transform .1s ease-in-out
    color: $color-shuttle-gray
    text-decoration: none
    transform: none

    .oak-handle-inner
      display: flex
      width: 100%
      height: 100%
      align-items: center
      justify-content: center
      text-align: center

      i
        font-size: 30px

    &:hover
      background: $color-catskill-white

  .oak-popover
    background: $color-white
    border-radius: 5px
    width: 400px
    min-height: 100px
    text-align: left
    box-shadow: 0 7px 30px 0 rgba($color-hawkes-blue, 0.5)
    z-index: 50

    a
      color: $color-charade
      text-decoration: none

  .junipero.tabs
    .titles
      border-radius: 5px 5px 0 0
      overflow: hidden

  .oak-components
    display: flex
    flex-wrap: wrap
    margin: -10px

    .oak-component
      flex: 0 0 50%
      padding: 10px
      width: 50%
      max-width: 50%

      a
        display: flex
        align-items: center
        padding: 10px 15px
        width: 100%
        height: 40px
        background: $color-black-squeeze
        border-radius: 3px

        &:hover
          box-shadow: 0 0 0 1px var(--oak-main-color)

        .oak-component-icon
          color: var(--oak-main-color)
          display: block
          margin-right: 10px
          text-align: center
          font-size:25px

        span
          white-space: nowrap
          text-overflow: ellipsis
          overflow: hidden
