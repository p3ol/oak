@require "../../theme/colors"

.oak-col
  flex: 1 0 0
  position: relative

  for $i in (1..12)
    &-{$i}
      flex: 0 0 (($i / 12) * 100)%

  &:first-child > .oak-col-wrapper
    border-radius: 0 5px 5px 5px

  .oak-col-wrapper
    background: $color-link-water
    display: flex
    flex-wrap: wrap
    flex-direction: row
    position: relative
    border-radius: 5px
    width: 100%
    min-height: 150px

    & > .oak-options
      visibility: visible
      position: absolute
      top: 5px
      right: 5px
      left: auto
      transform: none

      & > .oak-option
        background: transparent
        color: $color-shuttle-gray
        margin-left: 2px
        border-radius: 3px

        &:hover
          color: var(--oak-active-color)

        &.oak-opened
          &, &:hover
            background: var(--oak-active-color)
            color: $color-white
            border-radius: 3px

        i
          font-size: 20px
          position: relative
          top: -2px

        &.oak-edit
          i
            font-size: 18px
            top: -3px

    .oak-catalogue
      display: flex
      flex-direction: row
      flex-wrap: wrap
      justify-content: center

      .oak-handle
        width: 26px
        height: 26px

        .oak-handle-inner i
          font-size: 22px

      &:last-child
        margin-top: 10px

      &:first-child:last-child
        height: calc(100% - 60px)
        align-items: center
        margin-top: 0
        margin: 30px 0

        .oak-handle
          width: 40px
          height: 40px

          .oak-handle-inner i
            font-size: 30px

  .oak-col-inner
    padding: 10px 0
    flex: 1 0 0

    &.drag-enter
      .oak-catalogue
        background: $color-catskill-white
        border-radius: 5px

        .oak-handle
          display: none

    .oak-col-content
      .oak-element
        margin-bottom: 0

      .oak-element.oak-row, .oak-element.oak-foldable
        margin-top: 40px
        margin-bottom: 0

        &:first-child
          margin-top: 20px

        &, &:first-child
          & > .oak-inner
            margin-top: 0
            background: transparent

        .oak-col-wrapper
          background: $color-white

          .oak-element:not(.oak-row) .oak-inner,
          .oak-element:not(.oak-foldable) .oak-inner
            background: $color-link-water

          .oak-col-wrapper
            background: $color-link-water

            .oak-col-wrapper
              background: transparent
              border: 1px solid $color-hawkes-blue

            .oak-element:not(.oak-row) .oak-inner,
            .oak-element:not(.oak-foldable) .oak-inner
              background: $color-white

      .oak-element
        .oak-inner
          background: $color-white
          margin-top: 20px

        &:first-child
          .oak-inner
            margin-top: 10px

  .oak-divider
    display: flex
    flex: 0 0 auto
    flex-direction: row
    flex-wrap: wrap
    align-items: center

    &.oak-prepend
      justify-content: flex-start

      a
        margin-right: 20px

    &.oak-append
      justify-content: flex-end

      a
        margin-left: 20px

    a
      display: flex
      text-decoration: none
      align-items: center
      justify-content: center
      width: 15px
      height 50px
      background: $color-catskill-white
      color: $color-shuttle-gray

      &:hover
        background: $color-catskill-white - 10

      & i
        font-size: 15px
