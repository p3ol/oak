{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": ["jest", "node", "react", "react-dom"],
    "module": "esnext",
    "noEmit": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2022"],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/global.d.ts",
    ".storybook/*.ts",
    "global.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo"
  ]
}
